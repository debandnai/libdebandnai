<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->

    <!-- Bottom right side 2dp Shadow -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/menu_bg_color"/>
            <corners
                android:bottomRightRadius="@dimen/select_menu_dropdown_bg_radius"
                android:bottomLeftRadius="@dimen/select_menu_dropdown_bg_radius"
                android:topLeftRadius="@dimen/select_menu_dropdown_bg_radius"
                android:topRightRadius="@dimen/select_menu_dropdown_bg_radius"/>
            <stroke
                android:width="1dp"
                android:color="@color/order_menu_dropdown_bg_stroke"/>
        </shape>
    </item>
</layer-list>