<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/_215sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/terms_pop_up_bg"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/crossIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/cancel"
            tools:ignore="ContentDescription">

        </ImageView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_127sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:scrollbarThumbVertical="@color/white"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_8sdp">

                <TextView
                    android:id="@+id/popupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:text="@string/terms_amp_conditions"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:text="@string/order_5_days_within_the_set_ten_day_period_shown_on_your_app_and_receive_a_free_lunch_your_free_lunch_will_be_to_the_value_of_your_lowest_priced_order_within_this_set_period_vouchers_will_be_emailed_to_the_address_you_used_to_register_to_add_your_voucher_go_to_the_wallet_section_of_your_app"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>
