<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/order_menu_calorie_row_bg_shadow_color"/>
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@android:color/white" />
            <corners
                android:radius="0dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</layer-list>
