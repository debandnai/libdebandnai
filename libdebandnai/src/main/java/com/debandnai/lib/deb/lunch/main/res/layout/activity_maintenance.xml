<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color2"
    tools:context=".ui.MaintenanceActivity">


    <ImageView
        android:id="@+id/cloudIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/cloud"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_123sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/transparent_app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/maintenanceIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:src="@drawable/maintenance"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/maintenanceTittleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/sorry_nwe_are_under_scheduled_n_maintenance"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintTop_toBottomOf="@+id/maintenanceIv" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/quicksand_bold"
        android:paddingStart="@dimen/_55sdp"
        android:paddingEnd="@dimen/_55sdp"
        android:text="@string/our_app_is_currently_undergoing_scheduled_maintenance_will_be_right_back_in_a_few_hours_thank_you_for_your_patience"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@+id/maintenanceTittleTv" />


</androidx.constraintlayout.widget.ConstraintLayout>