<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_dark"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_14sdp">

            <RelativeLayout
                android:id="@+id/rlBackgroundImgOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_img_order_success_status">

                <ImageView
                    android:id="@+id/img_order_loading_status"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:src="@drawable/order_plased"
                    android:visibility="gone"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/llOrderSuccessStatus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="center"
                        android:text="@string/order_placed"
                        android:textAllCaps="true"
                        android:textColor="@color/order_status_dialog_black"
                        android:textSize="@dimen/_18ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_order_success_status"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@drawable/right_tick_ioc" />

                        <TextView
                            android:id="@+id/tvOrderStatusMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/quicksand_bold"
                            android:gravity="center_horizontal"
                            android:textColor="@color/order_status_dialog_green"
                            android:textSize="@dimen/_14ssp"
                            tools:text="Transaction successful" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvOrderStatusMessage_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone"
                        tools:text="@string/Please_top_up_your_account_to_ensure_your_order_is_processed" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnOrderstatus"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/order_status_button_bg"
                        android:fontFamily="@font/quicksand_bold"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="@string/view_my_order"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOrderTwoStatus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="center"
                        android:text="@string/order_placed"
                        android:textAllCaps="true"
                        android:textColor="@color/order_status_dialog_black"
                        android:textSize="@dimen/_18ssp" />

                    <ImageView
                        android:id="@+id/img_order_status"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/order_plased"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/tvOrderStatusMessage_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/order_status_dialog_green"
                        android:textSize="@dimen/_14ssp"
                        tools:text="Transaction successful" />

                    <TextView
                        android:id="@+id/tvOrderStatusMessage_22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="gone"
                        tools:text="@string/Please_top_up_your_account_to_ensure_your_order_is_processed" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnOrderstatus2"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:background="@drawable/order_status_button_bg"
                        android:fontFamily="@font/quicksand_bold"
                        android:paddingBottom="@dimen/_3sdp"
                        android:text="@string/view_my_order"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:visibility="gone"/>

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>