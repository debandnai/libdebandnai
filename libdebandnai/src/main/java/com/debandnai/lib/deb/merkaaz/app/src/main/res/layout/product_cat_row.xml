<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="subCategory"
            type="com.merkaaz.app.data.model.SubCategory" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_prod_cat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/open_sans_regular"
            android:layout_margin="@dimen/_6sdp"
            android:maxWidth="@dimen/_136sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:background="@drawable/white_bg_round_corner"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textSize="@dimen/_10ssp"
            android:elevation="@dimen/_2sdp"
            android:textColor="@color/dark_blue"
            app:setSelectedSubCategory="@{subCategory.isSelected}"
            android:text="@{subCategory.subcategoryName}"
            tools:text="Category" />


    </LinearLayout>
</layout>