    <solid
        android:color="@color/transparent"/>

    <stroke
        android:width="@dimen/add_children_editText_stroke_width"
        android:color="@color/add_children_colorWhite"/>

    <size
        android:width="@dimen/add_children_edittext_bg_corner"
        android:height="1dp"/>

    <corners
        android:bottomRightRadius="@dimen/add_children_edittext_bg_corner"
        android:bottomLeftRadius="@dimen/add_children_edittext_bg_corner"
        android:topLeftRadius="@dimen/add_children_edittext_bg_corner"
        android:topRightRadius="@dimen/add_children_edittext_bg_corner"/>
