<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_100sdp"
        android:paddingEnd="@dimen/_16sdp"
        android:paddingBottom="@dimen/_16sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_white_bg_2"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/packingTypeIv"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/compostable_packing_icon"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/infoIv"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_i_icon"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/crossIv"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/cross_red"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp">

                <TextView
                    android:id="@+id/productNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/slate_color"
                    android:textSize="@dimen/_16ssp"
                    tools:text="Mc Cambridges Fresh Wholewheat Bread" />

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/productIv"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_140sdp"
                            android:layout_marginTop="@dimen/_24sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/info_product"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/productDescTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/quicksand_semi_bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp"
                            tools:text="Irish Stoneground Wholewheat Brown Bread. Free from preservatives, and is enhanced only with wheatgerm - an essential fatty acid." />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_17sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:fontFamily="@font/quicksand_bold"
                                android:gravity="center"
                                android:text="@string/allergen"
                                android:textAllCaps="true"
                                android:textColor="@color/red2"
                                android:textSize="@dimen/_16ssp"
                                tools:ignore="AllCaps" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:background="@color/red2" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/allergensNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/quicksand_bold"
                            tools:text="Gluten (Wheat), Milk"
                            android:textColor="@color/red2"
                            android:textSize="@dimen/_12ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="@string/nutrition"
                                android:textAllCaps="true"
                                android:textColor="@color/dark_gray2"
                                android:textSize="@dimen/_16ssp"
                                tools:ignore="AllCaps" />

                            <TextView
                                android:layout_width="@dimen/_78sdp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksand_semi_bold"
                                android:paddingStart="@dimen/_5sdp"
                                android:text="@string/per_portion"
                                android:textColor="@color/dark_gray2"
                                android:textSize="@dimen/_12ssp"
                                tools:ignore="RtlSymmetry" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@color/dark_gray2" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/nutritionRv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:nestedScrollingEnabled="false"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/nutrition_item" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>