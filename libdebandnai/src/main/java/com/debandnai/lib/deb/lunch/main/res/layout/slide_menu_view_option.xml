<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/slide_menu_view_option_selector_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_option_text_layout"
        android:layout_alignBottom="@+id/view_option_text_layout"
        android:src="@drawable/slide_menu_shape_rectangled_red"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/view_option_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/slide_menu_view_option_selector_side"
        android:padding="16dp"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/slide_menu_view_option_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/slide_menu_shape_circled_white"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/slide_menu_view_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/slide_menu_view_option_selector"
            android:gravity="center_vertical|start"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>