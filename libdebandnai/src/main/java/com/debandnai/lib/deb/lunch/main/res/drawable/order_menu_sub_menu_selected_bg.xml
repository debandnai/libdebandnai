<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->

    <!-- Bottom right side 2dp Shadow -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/order_menu_calorie_row_bg_shadow_color"/>
            <corners android:radius="@dimen/select_menu_dropdown_bg_radius" />
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="@dimen/select_menu_dropdown_bg_radius"
                android:bottomLeftRadius="@dimen/select_menu_dropdown_bg_radius"
                android:topLeftRadius="@dimen/select_menu_dropdown_bg_radius"
                android:topRightRadius="@dimen/select_menu_dropdown_bg_radius"/>
            <solid
                android:color="@color/order_menu_food_category_bg_color"/>
        </shape>
    </item>
</layer-list>