<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:padding="@dimen/_12sdp"
            android:background="@drawable/rect_round_corner_sky_color_bg"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/crossIv"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/cross_red"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/snoozeIv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:adjustViewBounds="true"
                android:paddingStart="@dimen/_35sdp"
                android:src="@drawable/noon_snooze"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/snoozeIv"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_28sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:textColor="@color/dark_gray3"
                android:textSize="@dimen/_14ssp"
                tools:text="No order can be made between 12 &amp; 12.30 while system updates" />
        </RelativeLayout>


    </LinearLayout>
</layout>