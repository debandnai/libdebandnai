<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->

    <!-- Bottom right side 2dp Shadow -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/order_menu_calorie_row_bg_shadow_color"/>
            <corners android:radius="@dimen/select_menu_dropdown_bg_radius" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/select_menu_for_child_colorGreen"/>
            <padding android:bottom="0dp"
                android:top="10dp"
                android:right="0dp"
                android:left="0dp"/>
            <corners
                android:bottomRightRadius="15dp"
                android:bottomLeftRadius="15dp"
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp"/>
        </shape>
    </item>
</layer-list>