<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteAccountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/menu_margin_start"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@color/transparent"
        android:elevation="@dimen/_4sdp"
        android:text="@string/delete_account"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_delete"
        android:textColor="@color/delete_account_text_color"
        android:drawablePadding="@dimen/_18sdp"
        android:textSize="@dimen/option_text_size"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:fontFamily="@font/quicksand_medium"
        tools:ignore="RtlCompat,RtlSymmetry" />
</LinearLayout>