<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/rl_padding_item_15dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/iv_allergens_checkUncheck"
            android:layout_width="@dimen/iv_allergen_checkUncheck_width_height_20dp"
            android:layout_height="@dimen/iv_allergen_checkUncheck_width_height_20dp"
            android:layout_centerVertical="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_allergensName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/add_child_allergen_text_marginLeft"
            android:layout_toRightOf="@+id/iv_allergens_checkUncheck"
            android:text=""
            android:textColor="@color/add_children_colorBlack"
            android:textSize="@dimen/tv_size_allergen_text_13sp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</RelativeLayout>