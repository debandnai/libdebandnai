    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp"
        android:gravity="center"
        android:background="@color/light_dark">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardBackgroundColor="@color/first_dayorder_item_yes_no_dialog_background"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_popupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/notification_alert"
                android:textColor="@color/first_dayorder_item_yes_no_dialog_red"
                android:textSize="@dimen/_22ssp"
                android:fontFamily="@font/quicksand_bold" />

                <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_popupTitle"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/order_status_dialog_black2"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:text="@string/there_are_some"
                    android:visibility="visible"
                    android:fontFamily="@font/quicksand_bold" />

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/notification_alart_img"
                    android:layout_below="@+id/tv_content1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image1"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_minus4sdp"
                    android:textColor="@color/order_status_dialog_black2"
                    android:textSize="@dimen/_15ssp"
                    android:gravity="center"
                    android:text="@string/please_follow_the_button"
                    android:visibility="visible"
                    android:fontFamily="@font/quicksand_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/tv_content2"
                    android:layout_marginTop="@dimen/_6sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/red_button_bg3"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="@string/cancel"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_settings"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/green_button_bg"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="@string/settings"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

