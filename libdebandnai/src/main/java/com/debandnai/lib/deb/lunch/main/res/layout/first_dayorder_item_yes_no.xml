<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp"
        android:gravity="center"
        android:background="@color/light_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/first_dayorder_item_yes_no_dialog_bg"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/warning"
                android:textColor="@color/first_dayorder_item_yes_no_dialog_red"
                android:textSize="@dimen/_22ssp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_below="@+id/popupTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_14sdp"
                android:src="@drawable/first_dayorder_item_yes_no_dialog_warning_img"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_40sdp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="@string/the_order_deadline_nhas_passed"
                android:textColor="@color/order_status_dialog_black2"
                android:textSize="@dimen/_14ssp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/okTv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_below="@+id/contentTv"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/background_textview_deep_green"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:paddingBottom="@dimen/_2sdp"
                android:text="@string/ok"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>
